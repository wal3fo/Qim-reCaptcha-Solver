{
  "manifest_version": 3,
  "name": "Google reCaptcha Solver (STT)",
  "version": "1.0.0",
  "description": "Automated Google reCaptcha v2 solver using Speech-to-Text (Wit.ai).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.recaptcha.net/*",
    "https://api.wit.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/recaptcha/*",
        "*://*.recaptcha.net/recaptcha/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/favicon.png",
      "48": "icons/favicon.png",
      "128": "icons/favicon.png"
    }
  },
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  }
}